###############################################################################

# Starting parameters
units      metal
atom_style atomic
dimension  3
boundary   p p p

###############################################################################

# START DO NOT TOUCH
read_data       input.pos
include         masses.txt
pair_style mlip mlip.ini
pair_coeff * *
# END DO NOT TOUCH

###############################################################################

variable    start_temp equal 2000
variable    dT         equal 500
variable    iterations loop  4

timestep    0.001

# Define the trajectories used for a test set

fix         hold all nvt temp ${start_temp} ${start_temp} 0.1
run         1000

dump        testdump all atom 100 dump.atom

label       start_loop
variable    t equal ${start_temp}-(${iterations}-1)*${dT}

fix         hold all nvt temp ${t} ${t} 0.1
run         1000

next        iterations
jump        md_test.in start_loop
