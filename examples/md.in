units           metal
atom_style      atomic
boundary        p p p

read_data       input.pos

include         masses.txt

pair_style mlip mlip.ini
pair_coeff * *

# User can modify below for appropriate MD

neighbor        0.5 bin
neigh_modify    every 1 delay 5 check yes

timestep        0.001

fix             1 all nvt temp 2000 2000 0.1

thermo_style    custom step temp press vol pe ke etotal
thermo 1

dump   1 all custom 1 dump.nb id type x y z fx fy fz

run             10000
reset_timestep  0
